<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.thymeleaf" level="ERROR"/>
    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="org.hibernate.orm.results" level="INFO"/>
    <logger name="org.hibernate.validator" level="ERROR"/>
    <logger name="ru.saneci.booklibrary.config" level="ERROR"/>
    <logger name="ru.saneci.booklibrary.controller" level="INFO"/>
    <logger name="ru.saneci.booklibrary.service" level="INFO"/>
</configuration>