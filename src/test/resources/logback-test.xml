<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- main -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="ru.saneci.booklibrary.controller" level="DEBUG"/>
    <logger name="ru.saneci.booklibrary.service" level="DEBUG"/>

    <!-- test -->
    <logger name="org.springframework.test.web.servlet" level="OFF"/>
    <logger name="org.springframework.mock.web" level="OFF"/>
    <logger name="org.testcontainers" level="INFO"/>
    <logger name="tc" level="INFO"/>
    <logger name="com.github.dockerjava" level="WARN"/>
    <logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc.client5.http.wire" level="OFF"/>
</configuration>